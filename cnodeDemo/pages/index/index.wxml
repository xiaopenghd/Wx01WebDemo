<!--index.wxml-->
<view style="display:flex;flex-direction:column" wx:for="{{infos}}">
 <view id="{{item.id}}" bindtap="click_SeeInfo" style="border-bottom:5px solid #888888;padding:5px">
        <view style="font-size:14px;color:#09bb07;display:flex;flex-direction:row;align-items:flex-end">
               <image src="../images/tx.jpeg" style="width:24px;height:24px"></image>
                <view style="padding-left:5px"><text>用户名</text></view>
        </view>
        <view style="margin-top:5px;margin-bottom:5px;font-size:18px"><text >{{item.title}}</text></view>
        <view style="display:flex;justify-content:space-between">
           <view style="border:1px solid #09bb07;color:#09bb07;padding:2px;font-size:15px"><text >{{item.visit_count}}人看过</text></view>
           <view style="color:#888888;font-size:14px"><text>{{item.reply_count}}条回复</text></view>
        </view>

     

   </view>
</view>
